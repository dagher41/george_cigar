extends ../../layout.pug

block content
  h1 Login

  if infoMessage
    div.my-3.text-danger=infoMessage

  form(action='/admin/login' method='post')
    label.mb-0(for='user_email') User Email
    div
      input(id='user_email' name='email', type='email')
    label.pt-3.mb-0(for='user_passwword') Password
    div
      input(id='user_passwword' type="password" name='password')
    div
      input.btn.btn-dark.my-4(type='submit' name='Submit')  